<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Limitar o tamanho máximo de linhas a 100 caracteres -->
    <module name="LineLength">
        <property name="max" value="100"/>
        <property name="ignorePattern" value="^package\s.+|^import\s.+|a long regex"/>
    </module>

    <!-- Verificar se as variáveis seguem o padrão de nomenclatura camelCase -->
    <module name="LocalVariableName"/>

    <!-- Impedir mais de 1 instrução por linha -->
    <module name="OneStatementPerLine"/>

    <!-- Verificar a existência de Javadoc em classes e métodos públicos -->
    <module name="JavadocType"/>
    <module name="JavadocMethod"/>

    <!-- Verificar a convenção de nomenclatura para classes -->
    <module name="TypeName"/>

    <!-- Verificar a convenção de nomenclatura para métodos -->
    <module name="MethodName"/>

    <!-- Exigir chave de fechamento na mesma linha para blocos try-catch -->
    <module name="RightCurly">
        <property name="option" value="same"/>
    </module>

    <!-- Verificar espaços em branco -->
    <module name="WhitespaceAround"/>
    <module name="NoWhitespaceAfter"/>

    <!-- Verificar se os campos seguem a convenção de nomenclatura -->
    <module name="MemberName"/>

    <!-- Limitar a profundidade de aninhamento de blocos de código -->
    <module name="NestedIfDepth">
        <property name="max" value="3"/>
    </module>

    <!-- Verificar se as variáveis finais seguem a convenção de nomenclatura -->
    <module name="FinalLocalVariable"/>

    <!-- Verificar se os blocos de código são encerrados corretamente -->
    <module name="NeedBraces"/>

    <!-- Impedir a utilização de espaços antes de vírgulas -->
    <module name="NoWhitespaceBefore"/>

    <!-- Verificar o uso correto de espaços antes dos operadores de atribuição -->
    <module name="WhitespaceAround"/>

    <!-- Garantir que os pacotes tenham as devidas importações organizadas -->
    <module name="AvoidStarImport"/>
    <module name="UnusedImports"/>

    <!-- Limitar o número de parâmetros em métodos para 5 -->
    <module name="ParameterNumber">
        <property name="max" value="5"/>
    </module>

    <!-- Limitar o número de linhas de métodos -->
    <module name="MethodLength">
        <property name="max" value="50"/>
    </module>

    <!-- Verificar a indentação padrão de 4 espaços -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="0"/>
        <property name="caseIndent" value="4"/>
        <property name="tabWidth" value="4"/>
    </module>

    <!-- Limitar o número de classes internas por classe -->
    <module name="ClassDataAbstractionCoupling">
        <property name="max" value="10"/>
    </module>
</module>
